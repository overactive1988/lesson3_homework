block var
doctype html
html(lang="zh-TW")
  block head
    head
      meta(charset="utf-8")
      link(rel="canonical" href=page.url)
      meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
      meta(name="viewport" content="width=device-width")

      title #{page.title}


      meta(name="keywords" content=page.keywords)
      meta(name="description" content=page.description)

      meta(name="robots" content="index,follow")
      meta(name="format-detection" content="telephone=no")
      link(rel="shortcut icon" href="../favicon.ico")
      //- font style
      .
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans&family=Noto+Sans+TC:wght@400;500;700&family=Roboto:ital,wght@0,400;0,500;0,700;1,900&display=swap" rel="stylesheet">

      block css
        link(rel="stylesheet" href="../assets/css/common.min.css")

  body
    header.header.bg-primary
      .logo
        a(href="../")
          img(src="../assets/images/logo.png", alt="logo")
      nav.header__menu
        ul.header__link
          li
            a(href="../product-sunglasses") 系列鏡框
          li
            a(href="../location") 門市據點
          li
            a(href="../blog") 部落格
          li
            a(href="../faq") 常見問題
    block content
    footer.bg-primary
      .container
        .footer__header
          ul.footer__link
            li
              a(href="../") 首頁
            li
              a(href="../product-sunglasses") 系列鏡框
            li
              a(href="../location") 門市據點
            li
              a(href="../blog") 部落格
            li
              a(href="../faq") 常見問題

          ul.footer__contact
            li
              a(href="tel:+886-800-000-000")
                img(src="../assets/images/icon-phone.svg", alt="")
                | 0800-000-000
            li
              a(href="mailto:glasses@business.com")
                img(src="../assets/images/icon-mail.svg", alt="")
                | glasses@business.com

        ul.footer__sns
          li
            a(href="https://www.facebook.com/" target="_blank")
              img(src="../assets/images/icon-fb.svg", alt="")
          li
            a(href="https://www.instagram.com/" target="_blank")
              img(src="../assets/images/icon-ig.svg", alt="")
          li
            a(href="https://line.me/" target="_blank")
              img(src="../assets/images/icon-line.svg", alt="")


        .footer__others
          .copyright
            a.footer__logo(href="../")
              img(src="../assets/images/logo.png", alt="")
            small Copyright © 2020 Glasses.All rights reserved.
          ul.policy
            li
              a(href="../privacy") 隱私權政策
            li
              a(href="../terms") 服務條款
