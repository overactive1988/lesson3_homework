      section.top__section.co-branding
        .container
          h2.top__section__title.white__color(data-aos="fade-left") 聯名設計鏡框

          ul.co-branding__list

            li.co-branding__item(data-aos="fade-left")
              a(href="#")
                span.co-branding--img01
                h3.u-en Double A+

            li.co-branding__item(data-aos="fade-left" data-aos-delay="300")
              a(href="#")
                span.co-branding--img02
